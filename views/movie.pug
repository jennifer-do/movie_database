extends layout 

block content 
    h1= movie.name 
    div(class='movie')
        h5 Released: #{movie.year}
        h5 Posted by: #{posted_by}
        p Rating: #{movie.rating}
        label Genres:
        ul
        each genre in movie.genres
            li #{genre}

        hr
        //- If user logged in
        if user
            //- Hide edit and delete unless book was posted by current user
            if user._id == movie.posted_by
                //- Link to edit book
                a.btn.btn-default(href="/movie/edit/" + movie._id) Edit Book
                br
                //- Link to delete book
                a.btn.delete-book(href="#", data-id=movie._id) Delete Book